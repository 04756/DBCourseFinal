<c3p0-config>
    <default-config>
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/dbfinal?useSSL=true&amp;serverTimezone=GMT</property>
        <property name="user">root</property>
        <property name="password">mysql</property>

        <!--当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。Default: 3 -->
        <property name="acquireIncrement">3</property>

        <!--初始化时获取十个连接，取值应在minPoolSize与maxPoolSize之间。Default: 8 -->
        <property name="initialPoolSize">8</property>

        <!--连接池中保留的最大连接数。Default: 15 -->
        <property name="maxPoolSize">20</property>

        <property name="minPoolSize">5</property>

        <!--两次连接中间隔时间，单位毫秒。Default: 1000 -->
        <property name="acquireRetryDelay">1000</property>

        <!--定义在从数据库获取新连接失败后重复尝试的次数。Default: 10 -->
        <property name="acquireRetryAttempts">10</property>

    </default-config>
    <named-config name="MySQL">
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/dbfinal?useSSL=true&amp;serverTimezone=GMT</property>
        <property name="user">root</property>
        <property name="password">mysql</property>
        <property name="acquireIncrement">3</property>
        <property name="initialPoolSize">8</property>
        <property name="maxPoolSize">20</property>
    </named-config>
</c3p0-config>